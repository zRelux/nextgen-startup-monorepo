{
	"name": "startup-monorepo",
	"version": "1.0.0",
	"type": "module",
	"private": true,
	"workspaces": ["packages/*", "apps/*"],
	"scripts": {
		"type:check": "tsc ./**/*.{ts,tsx} --noEmit",
		"lint": "bunx @biomejs/biome check --check .",
		"lint:fix": "bunx @biomejs/biome check --write .",
		"format": "bunx @biomejs/biome format .",
		"format:fix": "bunx biome format --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@types/bun": "latest",
		"typescript": "^5.5.3"
	},
	"trustedDependencies": ["@biomejs/biome", "@monorepo/bff", "core-js", "esbuild"]
}
